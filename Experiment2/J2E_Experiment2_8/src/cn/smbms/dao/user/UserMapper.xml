<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.smbms.dao.user.UserMapper">

	<!-- 修改当前用户密码 -->
	<update id="updatePwd">
		update smbms_user set
			userPassword=#{userPassword}
		where id=#{id}
	</update>
</mapper>